# Menentukan environment (meskipun di CI kita pakai --env-manager=local)
# Tetap wajib didefinisikan secara sintaks.
conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: string, default: "diabetes_dataset_processed.csv"}
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
    # Perintah untuk menjalankan script Python Anda
    command: "python modelling.py"
